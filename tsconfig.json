{
  "compilerOptions": {
    "rootDir": ".",
    "target": "es6",
    "module": "commonjs",
    "declaration": true,
    "allowJs": false,
    "noImplicitAny": false,
    "strict": true,
    "outDir": "./lib",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": ["src/*.ts", "types/*.ts"],
  "exclude": [
    "**/build",
    "node_modules",
    "**/node_modules",
    "**/coverage",
    "**/*.spec.ts",
    "**/test",
    "**/__tests__",
    "**/*.test.ts"
  ]
}
